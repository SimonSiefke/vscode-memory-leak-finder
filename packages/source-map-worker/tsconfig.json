{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "checkJs": true,
    "module": "NodeNext",
    "types": ["node"],
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["src"]
}
